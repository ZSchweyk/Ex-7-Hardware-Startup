<MainScreen>:

    sequence_btn: sequence_btn
    position_txt: position_txt
    speed_value: speed_value
    toggle_motor_status_btn: toggle_motor_status_btn
    motor_direction: motor_direction

    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: toggle_motor_status_btn
        text: "Turn On"
        size: 100, 100
        center_x: root.width * 0.25
        center_y: root.height * 0.9
        color: 1, 1, 1, 1
        on_release: root.turn_motor_on_off(self.text)

    DPEAButton:
        id: motor_direction
        text: "CCW"
        size: 100, 100
        center_x: root.width * 0.5
        center_y: root.height * 0.9
        color: 1, 1, 1, 1
        on_release: root.change_motor_direction()

    Slider:
        id: speed_value
        orientation: "horizontal"
        size_hint: None, None
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0
        font_size: 30
        width: 300
        min: 0
        max: 100
        value: 50
        center_x: root.width * 0.75
        center_y: root.height * 0.9
        on_value: root.change_speed()

    DPEAButton:
        text: "Close"
        size: 100, 100
        center_x: root.width * 0.9
        center_y: root.height * 0.2
        color: 1, 1, 1, 1
        on_release: root.exit_program()

    DPEAButton:
        id: sequence_btn
        text: "Run Seq."
        size: 100, 100
        center_x: root.width * 0.5
        center_y: root.height * 0.7
        color: 1, 1, 1, 1
        on_release: root.run_sequence()

    Label:
        id: position_txt
        text: ""
        size_hint: None, None
        font_size: 30
        center_x: root.width * 0.75
        center_y: root.height * 0.7
        color: 1, 1, 1, 1
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0


